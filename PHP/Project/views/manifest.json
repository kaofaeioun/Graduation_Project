{
    "name"             : "MicMusic",
    "version"          : "1.0",
    "manifest_version" : 2,
    "description"      : "MicMusic 一個提供直播串流的平台，藉由匿名的方式與觀眾投票的方式，讓不敢站上舞台、沒有舞台進行表演的演唱者，能有一個表現自己的舞台。拿起麥克風，在MicMusic裡，大唱特唱吧！",
    "icons"            : { "16" : "images/icon.png", "48" : "images/icon.png", "128" : "images/icon.png" },
    "homepage_url"     : "https://www.pubnub.com/",
    "permissions"      : [ "notifications", "https://*.pubnub.com/*" ],
    "background"       : { "page" : "background.html" },
    "web_accessible_resources" : [ "images/icon.png" ],
    "browser_action" : {
        "default_icon"  : "images/icon.png",
        "default_title" : "MicMusic",
        "default_popup" : "popup.html"
    }
}
